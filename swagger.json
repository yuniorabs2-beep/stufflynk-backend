{
  "openapi": "3.0.0",
  "info": {
    "title": "Stufflynk API",
    "version": "1.0.0",
    "description": "Panel de Administración Integral de Stufflynk - Documentación Oficial"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Servidor Local de Desarrollo"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/users/register": {
      "post": {
        "summary": "Registrar nuevo usuario",
        "tags": ["Usuarios"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "email": { "type": "string" }, "password": { "type": "string" } } } } }
        },
        "responses": { "201": { "description": "Usuario creado con éxito" } }
      }
    },
    "/api/users/login": {
      "post": {
        "summary": "Iniciar sesión / Obtener Token",
        "tags": ["Usuarios"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "email": { "type": "string" }, "password": { "type": "string" } } } } }
        },
        "responses": { "200": { "description": "Autenticación exitosa" } }
      }
    },
    "/api/products": {
      "get": { "summary": "Listar todos los productos", "tags": ["Productos"], "responses": { "200": { "description": "OK" } } },
      "post": {
        "summary": "Crear nuevo producto (Admin)",
        "tags": ["Productos"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "price": { "type": "number" }, "description": { "type": "string" }, "category": { "type": "string" }, "countInStock": { "type": "number" }, "image": { "type": "string" } } } } }
        },
        "responses": { "201": { "description": "Producto creado" } }
      }
    },
    "/api/services": {
      "get": { "summary": "Listar todos los servicios", "tags": ["Servicios"], "responses": { "200": { "description": "OK" } } },
      "post": {
        "summary": "Publicar un servicio profesional",
        "tags": ["Servicios"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "title": { "type": "string" }, "description": { "type": "string" }, "price": { "type": "number" }, "category": { "type": "string" } } } } }
        },
        "responses": { "201": { "description": "Servicio creado" } }
      }
    },
    "/api/deals": {
      "get": {
        "summary": "Ver negociaciones activas (Admin)",
        "tags": ["Tratos (Deals)"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Listado de tratos" } }
      },
      "post": {
        "summary": "Iniciar nueva negociación",
        "tags": ["Tratos (Deals)"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "201": { "description": "Trato iniciado" } }
      }
    }
  }
}